<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newopenapiexchangeproject3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NoteInText"></activity>
        <activity android:name=".NoteText" />
        <activity android:name=".NoteMain" />
        <activity android:name=".UpdateNote" />
        <activity android:name=".UpdateMain" />
        <activity
            android:name=".CalCalculator"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity android:name=".NationIntent.NationIntent" />
        <activity android:name=".newsWebview" />
        <activity android:name=".SelectNation" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <provider
            android:authorities="com.example.newopenapiexchangeproject3"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths"/>
        </provider>
    </application>

</manifest>